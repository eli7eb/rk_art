#:import play_screen View.play_screen
#:import settings_screen View.settings_screen
#:import about_screen View.about_screen
#:import navigation_screen_manager navigation_screen_manager
<MenuButton@Button>:
    background_color:(0,0,0,0)
    back_color:(1,0,1,1)
    font_size: 0.25 * self.height
    size_hint:.8,.2
    border_radius:[10]
    canvas.before:
        Color:
            rgba:
                (48/255,84/255,150/255,1) if self.state == 'normal' else (0.6,0.6,1,1) # Color is red if button is not pressed, otherwise color is green
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[10]

<MainMenu@Screen>:
    orientation:"vertical"
    BoxLayout:
        orientation: 'vertical'
        size_hint:.6,.6
        spacing:10
        padding:70,100
        pos_hint: {'center_x':.5,'center_y':.5}
        TextInput:
            multiline:False
            id:mood_input
            size_hint:.8,.07
            hint_text:"Enter mood or return for random"
#           on_text:root.process()
#           on_text_validate:root.go_play()
        MenuButton:
            text:"Play"
            on_press:app.manager.push("PlayScreen",mood_input.text)
        MenuButton:
            text:"About"
            on_press:app.manager.push("AboutScreen")
        MenuButton:
            text:"Settings"
            on_press:app.manager.push("SettingsScreen")

<RkScreenManager>
    MainMenu:
        name:"MainMenu"
    PlayScreen:
        name:"PlayScreen"
    AboutScreen:
        name:"AboutScreen"
    SettingsScreen:
        name:"SettingsScreen"


