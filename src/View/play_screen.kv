<DashboardButton@Button>:
    background_color:(0,0,0,0)
    back_color:(1,0,1,1)
    font_size: 0.3 * self.height
    size_hint:.9,1
    border_radius:[5]
    canvas.before:
        Color:
            rgba:
                (48/255,84/255,150/255,1) if self.state == 'normal' else (0.6,0.6,1,1) # Color is red if button is not pressed, otherwise color is green
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[10]

<DashboardLabel@Label>:
    size_hint:.8,1


<PlayScreen>:
    id:play_screen
    name:"play"
    on_pre_enter: print('on_pre_enter', self.name)
    on_enter: print('on_enter', self.name)
    BoxLayout:
        orientation:'vertical'
        Button:
            text:'tiles'
            size_hint:1,.2
        Widget:
            id:game_canvas
            canvas:
                Color:
                    rgba:0,0,.5,1

                Rectangle:
                    id:"puzzle_bg"
                    size:game_canvas.width,game_canvas.height
                    pos:game_canvas.x,game_canvas.y
        BoxLayout:
            orientation:'horizontal'
            #text:'dashboard'
            size_hint:1,.1
            spacing:20
            DashboardButton:
                name:"Go Back"
                # TODO when in play text should be pause
                text:"go back"

                on_release:
                    app.manager.pop()
            DashboardButton:
                name:"Reshuffle"
                text:"reshuffle"
                # TODO active only in play

            DashboardLabel:
                text:"score"
            DashboardLabel:
                text:"art piece info"

            DashboardLabel:
                # TODO number of tries number of tiles left to go time leader board
                text:"play stats"
