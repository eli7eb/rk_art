WindowManager:
    MainWindow:
    AboutWindow:
    SettingsWindow:
    PlayWindow:

<MainWindow>:
    name:"main"
    BoxLayout:
        orientation: 'vertical'

        padding:100
        spacing:50
        BoxLayout:
            orientation:'horizontal'

            TextInput:
                multiline:False
                id:mood
                hint_text:"Enter mood or return for random"
                on_text:root.process()
                on_text_validate:root.go_play()
            Button:
                text:"Play"
                # pos_hint:{'center_x':.73}
                # size_hint:(.3,1.)
                on_release:
                    app.root.current = "play"
                    root.manager.transition.direction = "right"
        Button:
            text:"About"
            on_release:
                app.root.current = "about"
                root.manager.transition.direction = "right"
        Button:
            text:"Settings"
            on_release:
                app.root.current = "about"
                root.manager.transition.direction = "right"


<SettingsWindows>:
    name:"settings"
    Button:
        name:"Go Back"
        text:'go back'
        size_hint:.8,1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "left"

<AboutWindow>:
    name:"about"
    Button:
        name:"Go Back"
        text:'go back'
        size_hint:.8,1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "left"

<PlayWindow>:
    name:"play"

    BoxLayout:
        orientation:'vertical'
        Button:
            text:'tiles'
            size_hint:1,.2
        Widget:
            id:game_canvas
            canvas:
                Color:
                    rgba:0,0,.5,1

                Rectangle:
                    id:"puzzle_bg"
                    size:game_canvas.width,game_canvas.height
                    pos:game_canvas.x,game_canvas.y
        BoxLayout:
            orientation:'horizontal'
            #text:'dashboard'
            size_hint:1,.2

            Button:
                name:"Go Back"
                # TODO when in play text should be pause
                text:"go back"
                size_hint:.8,1
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"
            Button:
                name:"Reshuffle"
                text:"reshuffle"
                # TODO active only in play
                size_hint:.8,1
            Label:
                text:"score"
                size_hint:.8,1
            Label:
                text:"art piece info"
                size_hint:.8,1
            Label:
                # TODO number of tries number of tiles left to go time leader board
                text:"play stats"
                size_hint:.8,1
