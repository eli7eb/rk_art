WindowManager:
    MainWindow:
    OptionsWindow:
    AboutWindow:
    PlayWindow:

<MainWindow>:
    name:"main"
    BoxLayout:
        orientation: 'vertical'

        padding:100
        spacing:50
        BoxLayout:
            orientation:'horizontal'

            TextInput:
                multiline:False
                id:mood
                hint_text:"Enter mood or return for random"
                on_text:root.process()
                on_text_validate:root.go_play()
            Button:
                text:"Play"
                # pos_hint:{'center_x':.73}
                # size_hint:(.3,1.)
                on_release:
                    app.root.current = "play"
                    root.manager.transition.direction = "right"
        Button:
            text:"About"
        Button:
            text:"Options"


<OptionsWindows>:
    name:"options"

<AboutWindow>:
    name:"about"

<PlayWindow>:
    name:"play"

    BoxLayout:
        orientation:'vertical'
        Button:
            text:'tiles'
            size_hint:1,.2
        Button:
            text:'play area'
            size_hint:1,.8
        BoxLayout:
            orientation:'horizontal'
            #text:'dashboard'
            size_hint:1,.2

            Button:
                name:"Go Back"
                on_release:
                    app.root.current = "main"
                    root.manager.transition.direction = "left"